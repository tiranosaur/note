//enter to image
docker ps
select container
docker exec -it {selected container} bash

//Запуск докер-контейнеров
docker-compose pull
docker-compose up -d

//remove image / stop all container
docker rm -f $(docker ps -a -q)


//update docker docker-compose.yml in derectory
docker-compose pull


//show all stopped container
docker ps -a 

//run container
docker start <container name>
