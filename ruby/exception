begin
  # код, который будет выполняться, пока не возникнет ошибка
  x = 10
  y = 0
  puts x/y
rescue ZeroDivisionError => e
  # код, который будет выполнен, если возникнет ошибка
  puts e.message
else
  # Код отработал без ошибок
  puts 'Код отработал без ошибок'
ensure
  # код, который будет выполнен всегда в конце
  puts "finish"
end


# throw exception if not integer
raise "not a" unless 10.is_a?(Integer)
puts 10
raise "Argument error blah blah" unless 10.kind_of?(Integer)
puts 10
raise "Argument error blah blah" unless "10".kind_of?(Integer)
puts "10"
raise "-------" unless "10".is_a?(Integer)
puts "10"
