class Main extends Component {
    constructor(props) {
        super(props);
        this.state = props;
        this.update = this.update.bind(this);
    }

    update() {
        axios.get('http://laravel.example.loc/api/user/11')
            .then(resp => this.setState(resp.data));
    }

    render() {
        return (
            <div>
                <Item {...this.state}/>
                <button onClick={this.update}>Update</button>
            </div>
        )
    }

}
