func main() {
	for _, _ = range [10]int{} {
		go runPerformanceTest()
	}	
	fmt.Scanln()
}

func runPerformanceTest() {
	client := http.Client{}
	defer client.CloseIdleConnections()

	request, err := http.NewRequest("GET", "http://localhost:8084/index", nil)
	if err != nil {
		log.Fatalln(err)
	}

	resp, err := client.Do(request)
	if err != nil {
		log.Fatalln(err)
	}

	body, err := ioutil.ReadAll(resp.Body)
	if err != nil {
		log.Fatalln(err)
	}
	sb := string(body)

	println(sb)
}
